section.row.light
	.col.s12
		.input-field
			input.validate(ng-model="post.text", placeholder="Expression", id="text", type="text" required)
			input.validate(ng-model="post.translation", placeholder="Translation", id="password", type="text" required)
			input.btn.waves-effect.waves-light(ng-click="createPost()", type="submit", value="Create Post")
section.light
	p(ng-if='message') Message: {{ message }}
	p(ng-if='error') Error: {{ error }}